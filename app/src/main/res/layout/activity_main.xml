<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.androidui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

    <Button
        android:id="@+id/btn_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_display"/>

    <Button
        android:id="@+id/btn_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_textview"/>

    <Button
        android:id="@+id/btn_build_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_build_info"/>

    <Button
        android:id="@+id/btn_loop_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_loop_task"/>

    <Button
        android:id="@+id/btn_loop_task2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_loop_task2"/>

    <Button
        android:id="@+id/btn_preference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_preference"/>

</LinearLayout>
